{
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@cloudflare/workers-types": "^4.20251126.0",
    "@types/node": "^24.10.1",
    "alchemy": "^0.78.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "name": "budgie",
  "packageManager": "pnpm@10.12.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "biome check --write .",
    "check-types": "turbo check-types",
    "db:generate": "turbo -F @budgie/db db:generate",
    "db:push": "turbo -F @budgie/db db:push",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy",
    "dev": "alchemy dev",
    "dev:native": "turbo -F native dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "prepare": "husky"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
