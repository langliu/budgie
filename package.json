{
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/workers-types": "^4.20251205.0",
    "@types/node": "^24.10.1",
    "alchemy": "^0.80.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "name": "budgie",
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "biome check --write .",
    "check-types": "turbo check-types",
    "db:generate": "turbo -F @budgie/db db:generate",
    "db:push": "turbo -F @budgie/db db:push",
    "deploy": "alchemy deploy",
    "deploy:prod": "APP_ENV=prod alchemy deploy",
    "destroy": "alchemy destroy",
    "dev": "alchemy dev",
    "dev:native": "turbo -F native dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "prepare": "husky"
  },
  "type": "module",
  "workspaces": {
    "catalog": {
      "@ai-sdk/google": "^2.0.44",
      "@libsql/client": "^0.15.15",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "ai": "^5.0.106",
      "alchemy": "^0.80.1",
      "better-auth": "^1.4.5",
      "dotenv": "^17.2.3",
      "drizzle-orm": "^0.45.0",
      "hono": "^4.10.7",
      "libsql": "^0.5.22"
    },
    "packages": [
      "apps/*",
      "packages/*"
    ]
  }
}
